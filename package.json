{
  "name": "meow-memorizing",
  "description": "记单词的小插件",
  "private": true,
  "version": "0.2.2",
  "type": "module",
  "license": "LGPL-3.0-only",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build && bun run src/copy.ts",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript/native-preview": "^7.0.0-dev.20250920.1",
    "@webext-core/messaging": "^2.3.0",
    "@webext-core/storage": "^1.2.0",
    "@wxt-dev/auto-icons": "^1.1.0",
    "@wxt-dev/module-react": "^1.1.5",
    "antd": "^5.27.4",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "classnames": "^2.5.1",
    "fs-extra": "^11.3.2",
    "husky": "^9.1.7",
    "lie": "^3.3.0",
    "lint-staged": "^16.1.6",
    "oxlint": "^1.16.0",
    "oxlint-tsgolint": "^0.3.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.4",
    "wxt": "^0.20.11"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome format --write",
      "biome lint --fix",
      "git add"
    ],
    "bun.lockb": [
      "bun install",
      "git add bun.lockb"
    ],
    "package.json": [
      "bun install",
      "git add bun.lockb"
    ]
  }
}
