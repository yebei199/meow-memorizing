{
  "name": "meow-memorizing",
  "description": "记单词的小插件",
  "private": true,
  "version": "0.1.8",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build && bun run src/copy.ts",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@unocss/postcss": "^0.61.5",
    "@webext-core/messaging": "^1.4.0",
    "@webext-core/storage": "^1.2.0",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-react": "^1.1.0",
    "antd": "^5.20.0",
    "axios": "^1.7.2",
    "classnames": "^2.5.1",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "typescript": "^5.5.4",
    "unocss": "^0.61.5",
    "wxt": "^0.19.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome format --write",
      "biome lint --fix",
      "git add"
    ],
    "bun.lockb": ["bun install", "git add bun.lockb"]
  }
}
