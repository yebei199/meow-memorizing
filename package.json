{
  "name": "meow-memorizing",
  "description": "记单词的小插件",
  "private": true,
  "version": "0.1.8",
  "type": "module",
  "license": "LGPL-3.0-only",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build && bun run src/copy.ts",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@unocss/postcss": "0.64.0",
    "@webext-core/messaging": "^2.0.0",
    "@webext-core/storage": "^1.2.0",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-react": "^1.1.1",
    "antd": "^5.20.2",
    "axios": "^1.7.5",
    "classnames": "^2.5.1",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "typescript": "^5.5.4",
    "unocss": "^0.64.0",
    "wxt": "0.19.15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome format --write",
      "biome lint --fix",
      "git add"
    ],
    "bun.lockb": [
      "bun install",
      "git add bun.lockb"
    ],
    "package.json": [
      "bun install",
      "git add bun.lockb"
    ]
  }
}
